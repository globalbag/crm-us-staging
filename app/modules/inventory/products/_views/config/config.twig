<form id="{{ FormID }}" name="{{ FormID }}" autocomplete="off" action="{{ ModuleUrl }}" method="post">

    <input type="hidden" name="cmd" value="config_set"/>


    <div class="form-group row">

        <div class="col-xs-6">
            <label class="control-label">Bucket</label>
            <input type="text" name="bucket" class="form-control" data-rule-required="true">
        </div>

        <div class="col-xs-6">
            <label class="control-label">Regi&oacute;n</label>
            <input type="text" name="region" class="form-control" data-rule-required="true">
        </div>

    </div>

    <div class="form-group row">
        <div class="col-xs-6">
            <label class="control-label">Key ID</label>
            <input type="text" name="key" class="form-control" >
        </div>
        <div class="col-xs-6">
            <label class="control-label">Secret</label>
            <input type="password" name="secret" class="form-control" >
        </div>
    </div>


</form>

<div class="BNBottomMenu">
    <button class="btn btn-default" onclick="BN.WinClose();" type="button">Cerrar</button>
    <button class="btn btn-primary" type="submit" form="{{ FormID }}">Guardar</button>
</div>

<script type="text/javascript">

    BN.Form("{{ FormID }}");


</script>






