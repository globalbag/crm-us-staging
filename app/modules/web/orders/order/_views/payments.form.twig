<form action="{{ ModuleUrl }}" method="post" name="{{ FormID }}" id="{{ FormID }}" autocomplete="off">
    <input type="hidden" name="cmd" value="new_add"/>
    <input type="hidden" name="WOrderID" value="{{ WOrderID }}">

    <div class="form-group row">
        <div class="col-sm-6">
            <label class="control-label">Monto</label>
            <input type="text" class="form-control" name="WOPaymentAmount" data-rule-requered="true" readonly>
        </div>
        <div class="col-sm-6">
            <label class="control-label">Fecha</label>
            <input class="form-control" name="WOPaymentDate" data-rule-requered="true">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <label class="control-label">Archivo</label>
            <input type="file" name="FileFile" class="form-control" data-rule-required="true">
            <small>Archivos aceptados con extensi√≥n: .pdf, .gif, .png, .jpg.</small>
        </div>
    </div>

</form>

<div class="BNBottomMenu">
    <div class="pull-right">
        <button class="btn btn-outline" onclick="BN.WinClose(); return false;">Cancelar</button>
        <button class="btn btn-primary" id="ActionButton" type="submit" form="{{ FormID }}">Agregar Pago</button>
    </div>
</div>

<script type="text/javascript">

    BN.Form('{{ FormID }}');

    $(BN.tools.jqselect('{{ FormID }}', 'WOPaymentDate')).datetimepicker({
        minDate:0,
        timepicker:false,
        format:'{{ dateFormat }}',
    });

</script>